{
    "compilerOptions": {
        "strictNullChecks": true,
        "moduleResolution": "Bundler",
        "module": "ES2020",
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "sourceMap": true,
        "rootDir": "./src/js",
        "forceConsistentCasingInFileNames": true,
        "jsx": "react-jsx",
        "resolvePackageJsonExports": true,
        "resolvePackageJsonImports": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "baseUrl": "./src"
    },
    "include": ["./src/js"],
    "exclude": [
        "node_modules"
    ]
}
